        android:layout_centerInParent="true"


        >
    <TextView
        android:id="@+id/txt_price_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="2000"/>

    <TextView
        android:id="@+id/txt_price_item2"
