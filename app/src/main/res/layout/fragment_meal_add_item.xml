<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    android:background="@color/gray1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cover"

                />
            <ImageView
                android:id="@+id/image_upload"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="end|bottom"
                android:layout_marginEnd="15dp"
                android:src="@drawable/upload_icon"

                />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:text="@string/meal_name"
            />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/add_item_et_bg"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:text="@string/meal_details"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:singleLine="true"
            android:textColor="@color/gray4"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/add_item_et_bg"
            android:gravity="top"


            />
       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:text="@string/meal_type"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/white"
            >
            <Spinner
                android:id="@+id/spinner_food_type"

                android:layout_width="match_parent"
                android:layout_height="42dp"

                app:backgroundTint="@color/colorPrimary"


                >

            </Spinner>
        </FrameLayout>-->


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray5"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:text="@string/price"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/white"
            >
            <Spinner
                android:id="@+id/spinner_discount"
                android:layout_width="match_parent"
                android:layout_height="42dp"

                app:backgroundTint="@color/colorPrimary"

                >

            </Spinner>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            >
            <LinearLayout
                android:id="@+id/ll_before_discount"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="invisible"
                >
                <TextView
                    android:id="@+id/tv_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textAllCaps="true"
                    android:text="@string/price"
                    />
                <EditText
                    android:id="@+id/edt_price"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/add_item_et_bg"
                    android:inputType="numberDecimal"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_after_dis"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="5dp"
                android:visibility="invisible"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textAllCaps="true"
                    android:text="@string/after_discount"
                    />
                <EditText
                    android:id="@+id/edt_after_discount"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/add_item_et_bg"
                    android:inputType="numberDecimal"

                    />
            </LinearLayout>
        </LinearLayout>


        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expand_layout_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1200"
            app:el_expanded="false"
            app:el_parallax=".5"
            android:background="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recView_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </android.support.v7.widget.RecyclerView>
        </net.cachapa.expandablelayout.ExpandableLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray5"
            android:layout_marginTop="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray4"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:text="@string/optional"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            />


        <LinearLayout
            android:id="@+id/ll_extra"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".85"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textAllCaps="true"
                android:text="@string/exstra"
                android:layout_gravity="center_vertical"

                />
            <ImageView
                android:id="@+id/image_arrow"
                android:layout_width="0dp"
                android:layout_weight=".15"
                android:layout_height="match_parent"
                android:src="@drawable/down_red_arrow"
                android:padding="12dp"
                android:clickable="false"
                android:longClickable="false"
                />
        </LinearLayout>
        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expand_layout_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1200"
            app:el_expanded="false"
            app:el_parallax=".5"
            android:background="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:text="@string/item_name"
                    />

                <EditText
                    android:id="@+id/edt_extra_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/add_item_et_bg"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:text="@string/price"
                    />

                <EditText
                    android:id="@+id/edt_extra_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@drawable/add_item_et_bg"
                    android:inputType="numberDecimal"
                    />
                <Button
                    android:id="@+id/btn_extra_add"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textAllCaps="true"
                    android:letterSpacing=".1"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_login_bg"
                    android:text="@string/add"
                    android:layout_marginBottom="5dp"
                    />
            </LinearLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expand_layout_extra_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:el_duration="1200"
            app:el_expanded="false"
            app:el_parallax=".5"
            android:background="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"

            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recView_extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </android.support.v7.widget.RecyclerView>
        </net.cachapa.expandablelayout.ExpandableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:textSize="17sp"
            android:textAllCaps="true"
            android:text="@string/notes"
            />
        <EditText
            android:id="@+id/edt_note"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:textColor="@color/gray4"
            android:textSize="15sp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/add_item_et_bg"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="top"
            />
        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:letterSpacing=".1"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_login_bg"
            android:text="@string/add_meal"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"

            />
    </LinearLayout>
</ScrollView>